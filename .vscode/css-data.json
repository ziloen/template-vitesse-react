{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode-css-languageservice/master/docs/customData.schema.json",
  "version": 1.1,
  "atDirectives": [
    {
      "name": "@apply",
      "description": "inline tailwindcss classes",
      "references": [
        {
          "name": "tailwind doc",
          "url": "https://tailwindcss.com/docs/functions-and-directives#apply-directive"
        }
      ]
    },
    {
      "name": "@custom-variant",
      "description": "add custom variant",
      "references": [
        {
          "name": "tailwind doc",
          "url": "https://tailwindcss.com/docs/functions-and-directives#custom-variant-directive"
        }
      ]
    },
    {
      "name": "@reference",
      "description": "make tailwindcss available in context",
      "references": [
        {
          "name": "tailwind doc",
          "url": "https://tailwindcss.com/docs/functions-and-directives#reference-directive"
        }
      ]
    },
    {
      "name": "@theme",
      "description": "define custom design tokens",
      "references": [
        {
          "name": "tailwind doc",
          "url": "https://tailwindcss.com/docs/functions-and-directives#theme-directive"
        }
      ]
    },
    {
      "name": "@utility",
      "description": "add custom utilities",
      "references": [
        {
          "name": "tailwind doc",
          "url": "https://tailwindcss.com/docs/functions-and-directives#utility-directive"
        }
      ]
    }
  ]
}