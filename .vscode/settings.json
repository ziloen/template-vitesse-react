{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "tailwindcss",
    "ziloen"
  ],
  // add @apply & @container to css atDirectives
  "css.customData": [
    ".vscode/css-data.json",
  ],
  // due to this issue https://github.com/microsoft/vscode/issues/179355, we need to set this to top
  // "editor.snippetSuggestions": "top",
  // add @container & @media snippet
  "emmet.extensionsPath": [
    ".vscode/emmet",
  ],
  "eslint.format.enable": false,
  "javascript.preferences.autoImportSpecifierExcludeRegexes": [
    "^node:console$",
    "^typescript$",
  ],
  "prettier.enable": true,
  "tailwindCSS.experimental.configFile": "src/styles/tailwind.css",
  // https://devblogs.microsoft.com/typescript/announcing-typescript-5-6/#exclude-patterns-for-auto-imports
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    "^node:console$",
    "^typescript$",
  ],
  "typescript.tsdk": "node_modules\\typescript\\lib"
}