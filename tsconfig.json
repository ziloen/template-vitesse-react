{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "./",
    "baseUrl": "./",
    "module": "ESNext",
    "target": "ESNext",
    // type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": true,
    // resolve / build
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pages/client-react",
      "unplugin-icons/types/react",
      "ts-lib-enhance",
      "ts-lib-enhance/view-transition",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~cwd/*": [
        "./*"
      ],
    },
    "plugins": [
      // Disable cause performance issue
      // https://github.com/mrmckeb/typescript-plugin-css-modules/issues/215
      // https://github.com/mrmckeb/typescript-plugin-css-modules?tab=readme-ov-file#visual-studio-code
      // {
      //   "name": "typescript-plugin-css-modules"
      // }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}