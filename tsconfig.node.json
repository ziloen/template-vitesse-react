{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "erasableSyntaxOnly": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "*.{ts,js}",
    "test"
  ]
}