{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "eslint.config.js",
    "tailwind.config.js",
  ]
}