{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "*.ts",
    "*.js",
  ],
  "exclude": [
    "src",
    "dist",
    "node_modules"
  ],
}